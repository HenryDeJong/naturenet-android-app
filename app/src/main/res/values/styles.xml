    <style name="projects_fB_observation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/main_fb_observation</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:backgroundTint">@color/colorTheme</item>
    </style>
    <style name="projects_fB_designIdea">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
