<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.naturenet.ui.SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sign_up_rl_margin">

        <TextView
            android:id="@+id/sign_up_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            style="@style/sign_up_tv_back" />

        <TextView
            android:id="@+id/sign_up_tv_create"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sign_up_title_margin_bottom"
            style="@style/sign_up_tv_create" />

        <ImageView
            android:id="@+id/sign_up_iv"
            android:layout_below="@+id/sign_up_tv_create"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sign_up_title_margin_bottom"
            style="@style/sign_up_iv"/>

        <EditText
            android:id="@+id/sign_up_et_user_name"
            android:layout_below="@+id/sign_up_iv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sign_up_margin_bottom"
            android:padding="@dimen/sign_up_user_details_padding"
            android:minWidth="@dimen/sign_up_user_details_min_width"
            android:inputType="textPersonName"
            android:hint="@string/sign_up_et_user_name"
            style="@style/sign_up_et_user_details" />

        <EditText
            android:id="@+id/sign_up_et_password"
            android:layout_below="@+id/sign_up_et_user_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sign_up_margin_bottom"
            android:padding="@dimen/sign_up_user_details_padding"
            android:minWidth="@dimen/sign_up_user_details_min_width"
            android:inputType="textPassword"
            android:hint="@string/sign_up_et_password"
            style="@style/sign_up_et_user_details" />

        <EditText
            android:id="@+id/sign_up_et_name"
            android:layout_below="@+id/sign_up_et_password"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sign_up_margin_bottom"
            android:padding="@dimen/sign_up_user_details_padding"
            android:minWidth="@dimen/sign_up_user_details_min_width"
            android:inputType="textPersonName"
            android:hint="@string/sign_up_et_name"
            style="@style/sign_up_et_user_details" />

        <EditText
            android:id="@+id/sign_up_et_email_address"
            android:layout_below="@+id/sign_up_et_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sign_up_margin_bottom"
            android:padding="@dimen/sign_up_user_details_padding"
            android:minWidth="@dimen/sign_up_user_details_min_width"
            android:inputType="textEmailAddress"
            android:hint="@string/sign_up_et_email_address"
            style="@style/sign_up_et_user_details" />

        <Spinner
            android:id="@+id/sign_up_s_affiliation"
            android:layout_below="@+id/sign_up_et_email_address"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/sign_up_user_details_min_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sign_up_title_margin_bottom" />

        <Button
            android:id="@+id/sign_up_b_join"
            android:layout_below="@+id/sign_up_s_affiliation"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/join_b_width"
            android:layout_height="@dimen/join_b_height"
            android:padding="@dimen/join_b_padding"
            style="@style/sign_up_b_join" />

    </RelativeLayout>

</FrameLayout>
