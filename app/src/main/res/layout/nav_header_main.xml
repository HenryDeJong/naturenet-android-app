<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:id="@+id/nav_header"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/side_nav_bar"
    android:layout_marginBottom="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/nav_margin_bottom"
        style="@style/nav_iv" />

    <Button
        android:id="@+id/nav_b_sign_in"
        android:layout_below="@+id/nav_iv"
        android:layout_width="@dimen/nav_b_width"
        android:layout_height="@dimen/nav_b_height"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/nav_margin_bottom"
        style="@style/nav_b_sign_in" />

    <TextView
        android:id="@+id/nav_tv_display_name"
        android:layout_below="@+id/nav_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/nav_margin_bottom"
        style="@style/nav_tv_display_name" />

    <Button
        android:id="@+id/nav_b_join"
        android:layout_below="@+id/nav_b_sign_in"
        android:layout_width="@dimen/nav_b_width"
        android:layout_height="@dimen/nav_b_height"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/nav_margin_bottom"
        style="@style/nav_b_join" />

    <TextView
        android:id="@+id/nav_tv_affiliation"
        android:layout_below="@+id/nav_tv_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/nav_margin_bottom"
        style="@style/nav_tv_affiliation" />

</RelativeLayout>