<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_floating_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/floating_buttons_ib_add_observation"
        android:layout_width="@dimen/floating_buttons_width"
        android:layout_height="@dimen/floating_buttons_width"
        android:layout_margin="@dimen/floating_buttons_margin"
        android:layout_gravity="bottom|left"
        style="@style/floating_buttons_ib_add_observation"/>

    <ImageButton
        android:id="@+id/floating_buttons_ib_add_design_idea"
        android:layout_width="@dimen/floating_buttons_width"
        android:layout_height="@dimen/floating_buttons_width"
        android:layout_margin="@dimen/floating_buttons_margin"
        android:layout_gravity="bottom|right"
        style="@style/floating_buttons_ib_add_design_idea"/>

</FrameLayout>