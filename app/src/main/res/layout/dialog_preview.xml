<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_dialog_preview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="bottom"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/preview_observation_iv"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:clickable="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <LinearLayout
                    android:id="@+id/ll_preview_observer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/preview_observer_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:clickable="true"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignRight="@+id/preview_observer_avatar"
                        android:gravity="top"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/preview_observer_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/font_size_12"
                            android:textStyle="bold"
                            android:textColor="@color/colorTheme"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>
                            <!--android:layout_marginBottom="5dp"/>-->

                        <ImageView
                            android:id="@+id/preview_cancel"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/close"
                            android:clickable="true"/>

                        <TextView
                            android:id="@+id/preview_observer_affiliation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="3dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/font_size_12"
                            android:textAppearance="?android:attr/textAppearanceLarge"/>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/preview_observation_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_preview_observer"
                    android:layout_margin="3dp"
                    android:textSize="@dimen/font_size_11"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/preview_likes_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/likes"/>

                    <TextView
                        android:id="@+id/preview_likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/preview_likes_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/font_size_11"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                    <ImageView
                        android:id="@+id/preview_comments_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_toRightOf="@+id/preview_likes_count"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35dp"
                        android:src="@drawable/comments"/>

                    <TextView
                        android:id="@+id/preview_comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/preview_comments_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/font_size_11"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                </RelativeLayout>>

            </RelativeLayout>

        </LinearLayout>>

</merge>